<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:id="userManagementRoot"
      styleClass="main-content"
      alignment="TOP_CENTER"
      spacing="20.0">

    <padding>
        <Insets top="20" left="20" right="20" bottom="20"/>
    </padding>

    <Label text="Brugere" styleClass="dashboard-subtitle"/>

    <HBox spacing="12" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="SÃ¸g bruger..." prefWidth="200"/>
        <Button fx:id="createUserButton" text="&#xe145;" styleClass="crud-btn-create, material-icon"/>
        <Button fx:id="editUserButton" text="&#xe3c9;" styleClass="crud-btn-edit, material-icon"/>
        <Button fx:id="deleteUserButton" text="&#xe872;" styleClass="crud-btn-delete, material-icon"/>
    </HBox>

    <TableView fx:id="userTable" prefWidth="700" VBox.vgrow="ALWAYS">
