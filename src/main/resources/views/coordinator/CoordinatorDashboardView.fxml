<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<GridPane fx:id="coordinatorDashboardGrid"
          xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="org.example.eventticketsystem.gui.CoordinatorDashboardController"
          hgap="20" vgap="20" style="-fx-padding: 20;">

    <!-- Layout Constraints -->
    <columnConstraints>
        <ColumnConstraints percentWidth="50"/>
        <ColumnConstraints percentWidth="50"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="50"/>
        <RowConstraints percentHeight="50"/>
    </rowConstraints>

    <!-- Top Left: Event Overview -->
    <VBox fx:id="eventOverviewBox" GridPane.rowIndex="0" GridPane.columnIndex="0" spacing="10">
        <Label text="Mine Events" style="-fx-font-size:16; -fx-font-weight:bold;" />
        <Label fx:id="eventCountLabel" text="Events: ..." />
        <Label fx:id="ticketsSoldLabel" text="Tickets Sold: ..." />
    </VBox>

    <!-- Top Right: Ticket Sales Chart -->
    <BarChart fx:id="eventSalesChart" title="Billetsalg pr. Event"
              categoryGap="10" barGap="5"
              GridPane.rowIndex="0" GridPane.columnIndex="1">
        <xAxis>
            <CategoryAxis fx:id="eventAxis" label="Event" />
        </xAxis>
        <yAxis>
            <NumberAxis fx:id="salesAxis" label="Tickets Sold" />
        </yAxis>
    </BarChart>

    <!-- Bottom Left: Upcoming Events -->
    <VBox fx:id="upcomingEventsBox" GridPane.rowIndex="1" GridPane.columnIndex="0" spacing="10">
        <Label text="Kommende Events" style="-fx-font-size:16; -fx-font-weight:bold;" />
        <Label text="Liste kommer her..." />
    </VBox>

    <!-- Bottom Right: Placeholder / Future Enhancements -->
    <VBox fx:id="coordinatorExtraBox" GridPane.rowIndex="1" GridPane.columnIndex="1" spacing="10">
        <Label text="Notifikationer eller statistik (kommende)" />
    </VBox>
</GridPane>
