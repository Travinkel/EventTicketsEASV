<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.eventticketsystem.gui.coordinator.EventCoordinatorController">

    <top>
        <Label text="Event Koordinator Oversigt"
               styleClass="heading"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <!-- Events -->
            <TitledPane text="Mine Events" expanded="true">
                <VBox spacing="10">
                    <TableView fx:id="eventTable" prefHeight="200">
                        <columns>
                            <TableColumn fx:id="colTitle" text="Titel"/>
                            <TableColumn fx:id="colStartTime" text="Start"/>
                            <TableColumn fx:id="colEndTime" text="Slut"/>
                            <TableColumn fx:id="colLocation" text="Sted"/>
                        </columns>
                    </TableView>

                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Button fx:id="btnCreateEvent" text="➕ Opret Event" styleClass="button-primary"/>
                        <Button fx:id="btnEditEvent" text="✏️ Redigér Event" styleClass="button-primary"/>
                        <Button fx:id="btnDeleteEvent" text="🗑 Slet Event" styleClass="button-secondary"/>
                        <Button fx:id="btnAssignCoordinator" text="👥 Tildel Koordinator" styleClass="button-primary"/>
                    </HBox>
                </VBox>
            </TitledPane>

            <!-- Tickets -->
            <TitledPane text="Billetter til valgt event" expanded="true">
                <VBox spacing="10">
                    <TableView fx:id="ticketTable" prefHeight="220">
                        <columns>
                            <TableColumn fx:id="colTicketId" text="Billet ID"/>
                            <TableColumn fx:id="colUserId" text="Bruger ID"/>
                            <TableColumn fx:id="colEmail" text="Email"/>
                            <TableColumn fx:id="colPrice" text="Pris"/>
                            <TableColumn fx:id="colCheckedIn" text="Indtjekket"/>
                        </columns>
                    </TableView>

                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Button fx:id="btnCreateTicket" text="➕ Tilføj Billet (IRL)"/>
                        <Button fx:id="btnSendTicket" text="📧 Send Billet som PDF"/>
                        <Button fx:id="btnDeleteTicket" text="🗑 Slet Billet"/>
                    </HBox>
                </VBox>
            </TitledPane>

            <!-- Special Tickets -->
            <TitledPane text="Specialbilletter" expanded="true">
                <VBox spacing="10">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Titel:"/>
                        <TextField fx:id="txtSpecialTitle" promptText="F.eks. Gratis Øl"/>

                        <Label text="Event ID:"/>
                        <TextField fx:id="txtSpecialEventId" promptText="(valgfri)"/>
                    </HBox>

                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Button fx:id="btnCreateSpecialTicket" text="🎟 Opret Specialbillet"/>
                    </HBox>
                </VBox>
            </TitledPane>

        </VBox>
    </center>
</BorderPane>
