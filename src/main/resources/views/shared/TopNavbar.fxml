<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane fx:id="topNavbar"
            styleClass="top-navbar"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.eventticketsystem.gui.shared.TopNavbarController"
            prefHeight="60.0">


  <!-- Right-aligned controls -->
  <right>
    <HBox alignment="CENTER_RIGHT" spacing="12">
      <!-- Logout Icon Button -->
      <Button fx:id="logoutButton" styleClass="logout-btn" onAction="#handleLogout">
        <graphic>
          <FontIcon iconLiteral="mdi2l-logout" iconSize="18"/>
        </graphic>
      </Button>

      <!-- Admin name -->
      <Label fx:id="adminNameLabel" text="Stefan" styleClass="admin-name"/>

      <!-- Avatar -->
      <ImageView fx:id="userAvatar"
                 fitHeight="35" fitWidth="35"
                 preserveRatio="true">
        <image>
          <Image url="@../../images/omni_man.png"/>
        </image>
      </ImageView>

      <!-- Close app button -->
      <Button fx:id="closeButton" text="âœ•" styleClass="close-button" onAction="#handleCloseApp"/>
    </HBox>
  </right>
</BorderPane>
