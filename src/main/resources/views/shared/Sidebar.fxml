<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.Pane?>
<VBox fx:id="sidebarContainer"
      prefWidth="250.0"
      VBox.vgrow="ALWAYS"
      styleClass="sidebar"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.eventticketsystem.gui.SidebarController">

  <!-- Logo -->
  <ImageView fitWidth="120.0" preserveRatio="true">
    <image>
      <Image url="@../../images/easv_logo.png" />
    </image>
  </ImageView>

  <!-- Brugernavn Placeholder -->
  <Label fx:id="nameLabel" text="Name Label Placeholder" styleClass="sidebar-title"/>


  <!-- Spacer -->
  <Pane maxHeight="40"/>


  <!-- Button Holder -->
  <VBox fx:id="buttonContainer" spacing="10" alignment="TOP_CENTER"/>


</VBox>
